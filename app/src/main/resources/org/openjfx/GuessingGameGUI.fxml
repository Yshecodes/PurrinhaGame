<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.openjfx.GuessingGameController" spacing="10" alignment="CENTER">
    <Label fx:id="statusLabel" text="Welcome to the Guessing Game!"/>
    <TextField fx:id="playerNameInput" promptText="Enter your name here!"/>
    <Button text="Start Game" onAction="#startGame"/>
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="throwInput" promptText="Enter your throw"/>
        <Button text="Submit Throw" onAction="#getThrInput"/>  
        <TextField fx:id="guessInput" promptText="Enter your guess"/>
        <Button text="Submit Guess" onAction="#getGuessInput"/>  </HBox>
    <TextArea fx:id="gameLog" editable="true" wrapText="true"/>
    <Button text="New Game" onAction="#startNewGame"/>
</VBox>